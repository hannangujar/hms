<h1>Sign in</h1>

<%= form_with url: signin_path do |form| %>
     <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "asad@example.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
        <%= link_to  "Forgot Your password", password_reset_path %>
    </div>
    <div class="mb-3">
        <%= form.submit "Login", class: "btn btn-primary" %>
    </div> 
<% end %>